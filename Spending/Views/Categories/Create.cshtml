@model Spending.Models.EditCategoryModel

@{
    ViewBag.Title = "Create";
	ViewBag.SubmitCaption = "Create";
}

@section head
{
	<style type="text/css">
		#fieldsTable
		{
		    margin-bottom: 20px;
		}
		#fieldsTable td
		{
		    height: 35px;
		}
		#fieldsTable td:nth-child(1)
		{
		    padding-right: 10px;
		}
		#fieldsTable tr:nth-child(3) td:nth-child(2) input
		{
		    width: 100px;
		    text-align: right;
		}
		#budgetsTable th
		{
		    font-weight: bold;
		    background-image: -webkit-linear-gradient(top, #7FBFFF, #70B0F0 68%);
		}
		#budgetsTable th
		{
		    padding: 5px 5px 5px 5px;
		}
		#budgetsTable td:nth-child(1)
		{
		    text-align: right;
		}
		#budgetsTable td:nth-child(1) input
		{
		    text-align: right;
		    width: 100px;
		}
		#budgetsTable td:nth-child(2)
		{
		    text-align: left;
		}
		#budgetsTable td:nth-child(2) input
		{
		    width: 100px;
		}
		#budgetsTable td:nth-child(3)
		{
		    text-align: right;
		}
		#budgetsTable td:nth-child(3) input
		{
		    text-align: right;
		    width: 75px;
		}
		#budgetsTable td:nth-child(4)
		{
		    text-align: right;
		}
		#budgetsTable td:nth-child(4) input
		{
		    text-align: right;
		    width: 75px;
		}
		#budgetsTable td:nth-child(6)
		{
		    text-align: center;
		}
		#budgetsLabel,
		td:nth-child(1) label
		{
		    font-weight: bold;
		    font-size: 1.25em;
		}
	</style>
}

@Html.Partial("_Form")

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
